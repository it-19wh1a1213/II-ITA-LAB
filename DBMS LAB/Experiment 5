create database busticketreservation;
use busticketreservation;
show tables;
create table bus(busno int primary key,source varchar(20),destination varchar(20));
show tables;
insert into bus values(101,'hyd','chennai'),(102,'hyd','banglore'),(103,'mumbai','pune');
select * from bus;
create table passenger(pnr_no int(10) primary key,pname varchar(30),pAge int,Psex char(10));
insert into passenger values(100,'shreeya',20,'female'),(101,'selvi',20,'female'),(102,'shravya',20,'female');
select * from passenger;
create table ticket(ticket_no int primary key,journey_date date,Age real,gender varchar(10),source varchar(10),arrival_time varchar(10),destination varchar(10));
insert into ticket values(1,'2021-05-08',20,'F','Hyd','06:24','chennai'),(2,'2021-08-19',20,'F','Hyd','09:30','vizag');
select * from ticket;
create table reservation(pno int,foreign key(pno) references passenger(pno),journey_date date,address varchar(40),contact_no int,status char(2));
insert into reservation values(1201,'2021-04-24','hyd',78645,'R');
select * from reservation;
update passenger set pname = 'ramya' where pnr_no = 101;
select * from passenger;
delete from bus where busno = 101;
select * from bus;
alter table reservation drop contact_no;
select * from reservation;
alter table ticket modify age int;
select * from ticket;
alter table bus add no_of_passengers int;
select * from bus;
